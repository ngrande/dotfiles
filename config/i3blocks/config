# Volume indicator
#
# The first parameter sets the step (and units to display)
# The second parameter overrides the mixer selection
# See the script for details.
[sink_volume]
#label=VOL
#label=♪
#instance=Master
#instance=PCM
command=~/projects/scripts/i3blocks/change_volume.sh 10 sink show
interval=once
signal=10


[audio_source]
#interval=once
full_text=
command=~/projects/scripts/i3blocks/switch_audio.sh source &> /dev/null && ~/projects/scripts/i3blocks/change_volume.sh 11 source show &> /dev/null
color=#E6DB74
separator=false

[mic_volume]
command=~/projects/scripts/i3blocks/change_volume.sh 11 source show
interval=once
signal=11


# Generic media player support
#
# This displays "ARTIST - SONG" if a music is playing.
# Supported players are: spotify, vlc, audacious, xmms2, mplayer, and others.
[mediaplayer]
label= 
instance=spotify
interval=5
signal=10
command=$SCRIPT_DIR/mediaplayer/mediaplayer

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=MEM 
command=~/projects/scripts/i3blocks/memory.sh MEM %
separator=false
interval=30

[memory]
label=SWAP 
command=~/projects/scripts/i3blocks/memory.sh SWAP %
#instance=swap
separator=false
interval=30

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=~ 
#instance=/mnt/data
command=$SCRIPT_DIR/disk/disk
interval=30

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
[iface]
#instance=wlan0
#label=
#color=#7fff00
color=#FF6347
interval=10
separator=false
command=$SCRIPT_DIR/iface/iface

[wifi]
instance=wlp3s0
#label=
interval=10
separator=false
command=$SCRIPT_DIR/wifi/wifi

